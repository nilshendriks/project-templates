{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "*.twig",
      "*.html",
      "*.css",
      "*.scss",
      "*.vue",
      "*.astro",
      "*.md",
      "*.yml",
      "*.yaml",
      "*.lock",
      "*.lock.json",
      "*.lock.yaml",
      "*.cache",
      "dist/**",
      "node_modules/**"
    ]
  },
  "overrides": [
    {
      "include": [],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      }
    }
  ]
}
